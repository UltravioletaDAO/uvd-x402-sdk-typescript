{
  "name": "uvd-x402-sdk",
  "version": "2.6.0",
  "description": "x402 Payment SDK - Gasless crypto payments across 14 blockchains via Ultravioleta facilitator. Supports EVM, Solana, Fogo, Stellar, and NEAR with multi-stablecoin support (USDC, EURC, AUSD, PYUSD, USDT).",
  "author": "Ultravioleta DAO <developers@ultravioletadao.xyz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/UltravioletaDAO/uvd-x402-sdk-typescript"
  },
  "homepage": "https://402milly.xyz",
  "keywords": [
    "x402",
    "crypto",
    "payments",
    "usdc",
    "eurc",
    "stablecoin",
    "ethereum",
    "solana",
    "stellar",
    "near",
    "fogo",
    "gasless",
    "web3",
    "blockchain",
    "evm",
    "svm",
    "nep-366",
    "eip-712",
    "eip-3009",
    "caip-2"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./evm": {
      "types": "./dist/providers/evm/index.d.ts",
      "import": "./dist/providers/evm/index.mjs",
      "require": "./dist/providers/evm/index.js"
    },
    "./solana": {
      "types": "./dist/providers/solana/index.d.ts",
      "import": "./dist/providers/solana/index.mjs",
      "require": "./dist/providers/solana/index.js"
    },
    "./svm": {
      "types": "./dist/providers/solana/index.d.ts",
      "import": "./dist/providers/solana/index.mjs",
      "require": "./dist/providers/solana/index.js"
    },
    "./stellar": {
      "types": "./dist/providers/stellar/index.d.ts",
      "import": "./dist/providers/stellar/index.mjs",
      "require": "./dist/providers/stellar/index.js"
    },
    "./near": {
      "types": "./dist/providers/near/index.d.ts",
      "import": "./dist/providers/near/index.mjs",
      "require": "./dist/providers/near/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js"
    },
    "./wagmi": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "ethers": "^6.13.0"
  },
  "peerDependencies": {
    "@near-wallet-selector/core": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "@near-wallet-selector/my-near-wallet": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.87.0",
    "@stellar/freighter-api": "^3.0.0 || ^6.0.0",
    "@stellar/stellar-sdk": "^12.0.0 || ^13.0.0 || ^14.0.0",
    "@walletconnect/ethereum-provider": "^2.17.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@solana/web3.js": {
      "optional": true
    },
    "@solana/spl-token": {
      "optional": true
    },
    "@stellar/stellar-sdk": {
      "optional": true
    },
    "@stellar/freighter-api": {
      "optional": true
    },
    "@near-wallet-selector/core": {
      "optional": true
    },
    "@near-wallet-selector/my-near-wallet": {
      "optional": true
    },
    "@walletconnect/ethereum-provider": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@near-wallet-selector/core": "^10.1.4",
    "@near-wallet-selector/my-near-wallet": "^10.1.4",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@stellar/freighter-api": "^6.0.1",
    "@stellar/stellar-sdk": "^14.4.2",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.7",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
